article.b-article
	h2#security Безопасность
	ul.b-article__list
		li
			input#followbestpractices.b-article__checkbox(type='checkbox', tabindex='1')
			label(for='followbestpractices') Follow best practices
			a.sub-list-marker [+]
			ul.sub-list
				li
					a(href='https://asafaweb.com/') ASafaaWeb security analyzer
				li
					a(href='https://www.owasp.org/index.php/Category:OWASP_Top_Ten_Project') OWASP Top 10 project
				li
					a(href='https://www.owasp.org/index.php/Cheat_Sheets') OWASP Cheat Sheets
